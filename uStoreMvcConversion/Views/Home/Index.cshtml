@{
    ViewBag.Title = "uStore | Home";
}
<!-- start banner Area -->
<section class="banner-area">
    <div class="container">
        <div class="row fullscreen align-items-center justify-content-start">
            <div class="col-lg-12">
                <div class="active-banner-slider owl-carousel">

                    <div class="row single-slide">
                        <div class="col-lg-5">
                            <div class="banner-content">
                                <h1>Welcome to uStore</h1>
                                <p>
                                    This is a MVC Template conversion that I have created as a project during my enrollment at Centriq Training. The site uses Entity Framework and ASP.Net Identity, which allows for separation of concerns and the creation/ management of user roles. If this is your first time here, head to the 
                                    <a href="@Url.Action("Register", "Account")">Registration</a> page to get started! 
                                </p>
                                <div class="add-bag d-flex align-items-center">
                                     <button type="button" id="bannerBtn" class="btn btn-warning get add-text text-uppercase" onclick="addToCart(4)">Add to Cart</button>
                                  
                                </div>
                            </div>
                        </div>
                        <div class="col-lg-7">
                            <div class="banner-img">
                                <img class="img-fluid" src="~/Content/img/banner/banner-img.png" alt="">
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
<!-- End banner Area -->
